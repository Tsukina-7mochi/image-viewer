{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "image-viewer",
  "version": "0.1.0",
  "identifier": "net.ts7m.image-viewer",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Image Viewer",
        "width": 800,
        "height": 600,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "cli": {
      "description": "An image viewer",
      "args": [
        {
          "name": "file",
          "index": 1,
          "takesValue": true,
          "required": false
        }
      ]
    }
  }
}
